<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_basex2"
    tools:context=".Lab06_1Activity"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bài 1: BroadcastReceiver bằng Code"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="@dimen/margin_basex2"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BroadcastReceiver được đăng ký runtime (trong code)\nKhi có tin nhắn mới → hiển thị Toast"
        android:textSize="@dimen/text_medium"
        android:paddingBottom="@dimen/margin_basex2"
        android:textColor="?android:attr/textColorSecondary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="@dimen/margin_base">

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_medium"
            android:textColor="?android:attr/textColorPrimary"
            android:lineSpacingExtra="4dp" />
    </ScrollView>

</LinearLayout>
